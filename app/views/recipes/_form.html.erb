<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
  	<%= render partial: 'layouts/messages',  locals: {flash: @recipe.errors.full_messages} %>
  <% end %>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
	<%= f.label :image_url %>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, class: 'form-control' %>
  </div>
  <div class="form-group">
	<%= f.label :method %>
    <%= f.text_area :method, class: 'form-control' %>
  </div>
  <div class="form-group">
	<%= f.label :servings %>
    <%= f.text_field :servings, class: 'form-control' %>
  </div>
  <div class="form-group">
	<%= f.label :preparation_time %>
    <%= f.text_field :preparation_time, class: 'form-control' %>
  </div>
  <div class="form-group">
	<%= f.label :cooking_time %>
    <%= f.text_field :cooking_time, class: 'form-control' %>
  </div>
  
  <%= f.submit "Save", class:"btn btn-default" %>
<% end %>
